# OWUI_DIRECT_HOST: Default Open WebUI base URL shown in the Direct Connect form.
OWUI_DIRECT_HOST=http://localhost:4000
# OWUI_DIRECT_API_KEY: Optional API token that pre-populates the Direct Connect form.
OWUI_DIRECT_API_KEY=your-openwebui-api-key

# SUMMARY_MAX_CHARS: Maximum length (characters) of each generated chat headline.
SUMMARY_MAX_CHARS=256
# SALIENT_K: Number of salient chat utterances to consider when building context.
SALIENT_K=10

# EMB_MODEL: Sentence-transformer used for selecting salient chat messages.
EMB_MODEL=sentence-transformers/all-MiniLM-L6-v2
# OWUI_COMPLETIONS_MODEL: Chat completion model requested from Open WebUI.
OWUI_COMPLETIONS_MODEL=llama3.2:3b-instruct

# OLLAMA_*: Configuration for the local Ollama service used by summarization and GenAI routes.
# When running via docker-compose the service name resolves inside the network; switch to http://localhost:11434 for bare-metal runs.
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_PORT=11434
OLLAMA_PRELOAD_MODELS=llama3.1 phi3:mini nomic-embed-text
OLLAMA_SUMMARY_MODEL=llama3.1
OLLAMA_LONGFORM_MODEL=phi3:mini
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_DEFAULT_TEMPERATURE=0.2
OLLAMA_TIMEOUT_SECONDS=30

# FRONTEND_NEXT_PORT: Published port for the Next.js dashboard container.
FRONTEND_NEXT_PORT=8503
# FRONTEND_NEXT_PUBLIC_URL: External URL used for NextAuth redirects.
FRONTEND_NEXT_PUBLIC_URL=http://localhost:8503
# FRONTEND_NEXT_BACKEND_BASE_URL: Internal URL the Next.js proxy should use for FastAPI.
FRONTEND_NEXT_BACKEND_BASE_URL=http://backend:8502

# NEXTAUTH_SECRET: Shared secret for signing NextAuth sessions.
NEXTAUTH_SECRET=replace-with-secure-random-string
# NEXTAUTH_URL: Base URL for NextAuth callbacks (should match FRONTEND_NEXT_PUBLIC_URL).
NEXTAUTH_URL=http://localhost:8503
# BACKEND_BASE_URL: Default FastAPI base URL consumed by the Next.js proxy.
BACKEND_BASE_URL=http://backend:8502

# Optional GitHub OAuth configuration for NextAuth.
GITHUB_OAUTH_ENABLED=false
NEXT_PUBLIC_GITHUB_OAUTH_ENABLED=false
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# PostgreSQL connection settings for the persistence layer.
OWUI_DB_HOST=postgres
OWUI_DB_PORT=5432
OWUI_DB_NAME=openwebui_chat_analyzer
OWUI_DB_USER=owui
OWUI_DB_PASSWORD=owui_password
OWUI_DB_URL=postgresql+psycopg2://owui:owui_password@postgres:5432/openwebui_chat_analyzer
